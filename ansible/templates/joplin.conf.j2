# Port 80: Redirect to HTTPS and handle Certbot
server {
    listen 80;
    server_name {{ joplin_sub }}.{{ domain }};
    
    # Required for Let's Encrypt validation
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# Port 443: The Actual App (Only active if SSL certs exist)
{% if enable_ssl | default(false) | bool %}
server {
    listen 443 ssl;
    server_name {{ joplin_sub }}.{{ domain }};

    # SSL Certificates (generated by Certbot on host and mounted into container)
    ssl_certificate /etc/letsencrypt/live/{{ joplin_sub }}.{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ joplin_sub }}.{{ domain }}/privkey.pem;

    location / {
        # Use Docker's internal DNS resolver (deferred resolution)
        resolver 127.0.0.11 valid=10s;
        set $upstream_joplin joplin-server;
        # Protocol and Port MUST be outside the variable for reliable proxying
        proxy_pass http://$upstream_joplin:22300;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        client_max_body_size 100M;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Increase timeouts for large initial syncs
        proxy_read_timeout 86400;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
    }
}
{% endif %}
