# ==========================================
# DIGITALOCEAN CONFIGURATION
# ==========================================
# Generate at: Control Panel -> API -> Tokens
DIGITALOCEAN_TOKEN="dop_v1_..."

# Region for Droplet and Spaces (e.g., nyc3, ams3, sfo3)
DO_REGION="nyc3"

# ==========================================
# CLOUDFLARE CONFIGURATION
# ==========================================
# Generate Token at: My Profile -> API Tokens -> Create Token (DNS Edit)
CLOUDFLARE_API_TOKEN="your_token_here"
# Found on Domain Overview page (right sidebar)
CLOUDFLARE_ZONE_ID="your_zone_id_here"

# ==========================================
# DOMAIN & ROUTING
# ==========================================
DOMAIN_NAME="yourdomain.com"
JOPLIN_SUBDOMAIN="joplin"
TRILIUM_SUBDOMAIN="notes"

# ==========================================
# SECURITY & PASSWORDS
# ==========================================
# Use 'openssl rand -base64 24' to generate these
POSTGRES_PASSWORD="change_me_to_something_very_secure"

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_BLOCK_STORAGE=false
ENABLE_S3_STORAGE=false

# ==========================================
# STORAGE (DIGITALOCEAN SPACES)
# ==========================================
# Generate at: Control Panel -> Spaces -> Access Keys
SPACES_ACCESS_KEY_ID=""
SPACES_SECRET_ACCESS_KEY=""
SPACES_BUCKET_NAME="notes-attachments"

# ==========================================
# SSH KEYS
# ==========================================
# Paths to your specific SSH key pair for this project
SSH_PRIVATE_KEY_PATH="~/.ssh/id_ed25519_notes"
SSH_PUBLIC_KEY_PATH="~/.ssh/id_ed25519_notes.pub"

# ==========================================
# SSL (LET'S ENCRYPT)
# ==========================================
# Options: "dry-run" (test), "staging" (fake cert), "production" (live)
# - dry-run: Tests everything, saves nothing. Best for first run.
# - staging: Issues a "fake" cert. Tests if your Nginx can read the files.
# - production: Issues the real SSL certificate.
CERTBOT_MODE="dry-run"
# Email for Let's Encrypt notifications
ACME_EMAIL="admin@yourdomain.com"
